// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("SQLITE_DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  role     String
  admin    Admin?
  patient  Patient?
  provider Provider?
}

model Admin {
  id   Int    @id
  name String
  user User   @relation(fields: [id], references: [id]) // field admin id references user id 
}

model Patient {
  id          Int           @id
  name        String
  dni         String
  dob         String
  phoneNumber String?
  emr         String
  user        User          @relation(fields: [id], references: [id]) // field patient id references user id
  Appointment Appointment[]
}

model Provider {
  id          Int           @id
  name        String
  shifts      String
  phoneNumber String?
  user        User          @relation(fields: [id], references: [id]) // field provider id references user id
  Appointment Appointment[]
}

model Appointment {
  id         Int      @id @default(autoincrement())
  status     String   @default("espera")
  date       String
  time       String
  duration   Int      @default(30)
  patient    Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  patientId  Int
  provider   Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  providerId Int
}
